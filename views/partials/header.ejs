<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= typeof title !== 'undefined' ? title : 'Job Portal' %></title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
    <!-- Custom CSS -->
    <style>
        .navbar-brand {
            font-weight: bold;
            color: #0d6efd;
        }
        .nav-link {
            color: rgba(0,0,0,.7);
        }
        .nav-link:hover {
            color: #0d6efd;
        }
        .btn-primary {
            background-color: #0d6efd;
            border-color: #0d6efd;
        }
        .btn-primary:hover {
            background-color: #0b5ed7;
            border-color: #0a58ca;
        }
    </style>
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom">
        <div class="container">
            <a class="navbar-brand" href="/">Job Portal</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/jobs">Browse Jobs</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/companies">Companies</a>
                    </li>
                </ul>
                <ul class="navbar-nav">
                    <% if (locals.user) { %>
                        <li class="nav-item d-flex align-items-center me-3">
                            <span class="nav-link">
                                <i class="bi bi-person-circle"></i> <%= user.firstName %>
                            </span>
                        </li>
                        <% if (user.role === 'employer') { %>
                            <li class="nav-item me-3">
                                <a class="btn btn-outline-primary btn-sm" href="/companies/create">
                                    <i class="bi bi-building"></i> Company
                                </a>
                            </li>
                            <li class="nav-item me-3">
                                <a class="btn btn-outline-success btn-sm" href="/jobs/create">
                                    <i class="bi bi-plus-circle"></i> Post Job
                                </a>
                            </li>
                        <% } %>
                        <li class="nav-item">
                            <a href="/auth/login" class="btn btn-danger btn-sm">
                                <i class="bi bi-box-arrow-right"></i> Logout
                            </a>
                        </li>
                    <% } else { %>
                        <li class="nav-item">
                            <a class="nav-link" href="/auth/login" style="padding: 0.5rem 1rem;">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-primary ms-2" href="/auth/register" style="padding: 0.5rem 1.5rem;">Register</a>
                        </li>
                    <% } %>
                </ul>
            </div>
        </div>
    </nav>