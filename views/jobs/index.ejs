<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Jobs - Job Portal</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
</head>
<body>
    <%- include('../partials/navbar') %>

    <div class="container mt-4">
        <div class="row">
            <div class="col-md-12">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h2>Available Jobs</h2>
                    <% if (user && user.role === 'employer') { %>
                        <a href="/jobs/create" class="btn btn-primary">Post New Job</a>
                    <% } %>
                </div>

                <% if (jobs && jobs.length > 0) { %>
                    <% jobs.forEach(function(job) { %>
                        <div class="card mb-3">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div>
                                        <h5 class="card-title"><%= job.title %></h5>
                                        <h6 class="card-subtitle mb-2 text-muted"><%= job.company.companyName %></h6>
                                    </div>
                                    <span class="badge bg-primary"><%= job.type %></span>
                                </div>
                                
                                <p class="card-text"><%= job.description.substring(0, 200) %>...</p>
                                
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="text-muted">
                                        <i class="bi bi-geo-alt"></i> <%= job.location %>
                                        <% if (job.salary) { %>
                                            | <i class="bi bi-cash"></i> <%= job.salary %>
                                        <% } %>
                                    </div>
                                    <a href="/jobs/<%= job.id %>" class="btn btn-outline-primary">View Details</a>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <div class="alert alert-info">No jobs available at the moment.</div>
                <% } %>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html> 